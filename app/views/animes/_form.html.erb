<%= render 'layouts/errors', :object => @anime %>

<%= form_for [@subgenre, @anime] do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, class: "form-control"%>
  </div>
  <%= f.submit class: "btn-primary" %>
<% end %>
